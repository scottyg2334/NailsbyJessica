<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context="com.example.scott.nailsbyjessica.MainScreen">


    <ImageView
        android:id="@+id/imageViewOne"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/black_gliter_nails"
        android:scaleType="centerCrop"
        android:layout_marginTop="125dp"
        android:layout_marginBottom="125dp"

        />

    <TextView
        android:id="@+id/manicureText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Natural Manicure: $35"
        android:textColor="#c0c0c0"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="8dp"
        android:fontFamily="sans-serif-medium"
        />
    <TextView
        android:id="@+id/gelManicureText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Gel Manicure: $40"
        android:textColor="#c0c0c0"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="8dp"
        android:layout_below="@id/manicureText"
        android:fontFamily="sans-serif-medium"
        />
    <TextView
        android:id="@+id/pedicureText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Pedicure $51"
        android:textColor="#c0c0c0"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:layout_below="@id/gelManicureText"/>
    <TextView
        android:id="@+id/nailArtText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Nail Art: $5+"
        android:textColor="#c0c0c0"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:layout_toRightOf="@id/manicureText"
        android:layout_marginLeft="20dp" />


    <TextView
        android:id="@+id/websiteView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="https://www.facebook.com/nailsbyjessicaGrunwald/"
        android:textColor="#c0c0c0"
        android:textSize="12sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
       />

    <TextView
        android:id="@+id/phoneNumberView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(734) 884-8166"
        android:textColor="#c0c0c0"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_above="@id/websiteView"
        android:layout_marginBottom="20dp"

        />
    <TextView
        android:id="@+id/descriptionView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lead Nail Tech at Lucky's Hair Co."
        android:textColor="#c0c0c0"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/phoneNumberView"
        android:layout_marginBottom="20dp"
        />

</RelativeLayout>
